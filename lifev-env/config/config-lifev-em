cmake \
-D Trilinos_DIR=/local/$USER/lifev-env/lifev-env/trilinos-install/ \
\
-D CMAKE_BUILD_TYPE:STRING=RELEASE \
-D TPL_ENABLE_MPI:BOOL=ON \
-D TPL_ENABLE_ParMETIS:BOOL=ON \
-D TPL_ENABLE_BLAS:BOOL=ON \
-D TPL_ENABLE_LAPACK:BOOL=ON \
-D TPL_ENABLE_Boost:BOOL=ON \
-D TPL_ENABLE_Trilinos:STRING=ON \
-D ParMETIS_LIBRARY_DIRS:PATH=/local/$USER/lifev-env/ParMetis-3.2.0 \
\
-D LifeV_VERBOSE_CONFIGURE:BOOL=OFF \
-D CMAKE_VERBOSE_MAKEFILE:BOOL=ON \
\
-D CMAKE_CXX_FLAGS="-std=c++11" \
-D LifeV_ENABLE_STRONG_CXX_COMPILE_WARNINGS:BOOL=OFF \
\
-D LifeV_ENABLE_ALL_PACKAGES:BOOL=ON \
-D LifeV_ENABLE_TESTS:BOOL=ON \
-D LifeV_ENABLE_Electrophysiology:BOOL=ON \
-D LifeV_ENABLE_EM:BOOL=ON \
-D LifeV_ENABLE_Heart:BOOL=ON \
-D LifeV_ENABLE_EXAMPLES:BOOL=ON \
-D CMAKE_INSTALL_PREFIX:PATH=/local/$USER/lifev-env/lifev-env/lifev-install-em/ \
$* \
/local/$USER/lifev-env/lifev-em

